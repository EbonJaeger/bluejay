<component type="desktop-application">
  <id>io.github.ebonjaeger.bluejay</id>
  <name>Bluejay</name>
  <summary>Bluetooth device manager</summary>
  <description>
    <p>Bluejay is a Bluetooth manager and Bluez front-end. With it, you can pair devices, connect to and remove devices, turn Bluetooth on and off, and more. This project is powered by the Qt6 graphical toolkit and KDE Frameworks.</p>
  </description>
  <url type="homepage">https://github.com/EbonJaeger/bluejay</url>
  <url type="bugtracker">https://github.com/EbonJaeger/bluejay/issues</url>
  <url type="vcs-browser">https://github.com/EbonJaeger/bluejay</url>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MPL-2.0</project_license>
  <content_rating type="oars-1.1"/>
  <categories>
    <category>Utility</category>
  </categories>
  <keywords>
    <keyword>Bluetooth</keyword>
    <keyword>Kirigami</keyword>
    <keyword>Qt</keyword>
  </keywords>
  <provides>
    <binary>bluejay</binary>
  </provides>
  <developer id="io.github.ebonjaeger">
    <name translate="no">Evan Maddock</name>
    <url>https://github.com/EbonJaeger</url>
  </developer>
  <releases>
    <release version="1.0.0" date="2025-01-21">
      <description>
        <p>This is the first full release of Bluejay!</p>
      </description>
    </release>
    <release version="0.1.0" date="2024-12-28">
      <description>
        <p>This is the initial pre-release of Bluejay! It is meant to get some user feedback ahead of the big 1.0.</p>
      </description>
    </release>
  </releases>
  <launchable type="desktop-id">io.github.ebonjaeger.bluejay.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <caption>The Bluejay main window</caption>
